<%- include('../partials/header') %>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Skillz Main Page</th>
      <th>Welcome to the skills page</th>
    </tr>
  </thead>
  <tbody>
    <% skills.forEach(function(s) { %>
      <tr>
        <td><a href="/skills/<%= s.id %>"><%= s.skill %></a></td>
        <td><%= s.learned ? 'learned' : 'not learned' %></td>
        <td>
          <form action="/skills/<%= s.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">X</button>
          </form>
        </td>
        <td>
          <a href="/skills/<%= s.id %>/edit" class="btn btn-warning" role="button" >Edit</a>
         
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>


<p> Don't see an awesome skills listed? 
  <a href="/skills/new"> Add New Skill </a> 
</p>

